<?xml version="1.0" encoding="UTF-8"?>
<Context path="/MoblieCardStore">
    <!-- MySQL Database Connection Pool -->
    <Resource name="jdbc/mobilecardstore"
              auth="Container"
              type="javax.sql.DataSource"
              maxTotal="100"
              maxIdle="30"
              maxWaitMillis="10000"
              username="root"
              password=""
              driverClassName="com.mysql.cj.jdbc.Driver"
              url="jdbc:mysql://localhost:3306/mobilecardstore?useSSL=false&amp;allowPublicKeyRetrieval=true&amp;serverTimezone=UTC&amp;characterEncoding=UTF-8"/>
</Context>
